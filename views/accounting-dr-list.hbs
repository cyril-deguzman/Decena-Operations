<html>
    <head>
        <meta charset="utf-8">
        <!-- Page Title -->
        <title>Accounting</title>
        <link rel="icon" type="image/png" href="/images/favicon.ico"/>

        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/css/bootstrap.min.css" integrity="sha384-MCw98/SFnGE8fJT3GXwEOngsV7Zt27NXFoaoApmYm81iuXoPkFOJwJ8ERdknLPMO" crossorigin="anonymous">
        <link rel="stylesheet" href="https://cdn.datatables.net/1.10.25/css/dataTables.bootstrap4.min.css">

        <!-- Import stylesheet -->
        <link href="https://fonts.googleapis.com/css?family=Material+Icons|Material+Icons+Outlined|Material+Icons+Two+Tone|Material+Icons+Round|Material+Icons+Sharp" rel="stylesheet">
        <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" 
            rel="stylesheet" 
            integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" 
            crossorigin="anonymous">
        <link rel="stylesheet" type="text/css" href="/css/accounting-dr-list.css">
        <link rel ="stylesheet" type="text/css" href="/css/navbar.css">
        <!-- Import jquery -->
        <script src="https://code.jquery.com/jquery-3.6.0.js"
                integrity="sha256-H+K7U5CnXl1h5ywQfKtSj8PCmoN9aaq30gDh27Xc0jk="
                crossorigin="anonymous">
        </script>

    </head>

    <body>
        <!-- Navigation bar here -->
        {{> navbar display='none'}}
         
        <!-- Header -->   
        <div class="col-lg-12" id="header-logo">
            <img src="/images/dv-logo.png" alt="dv-logo" id="decena-logo"/>
            <h1 id="decena-text">DECENA'S VICTORY MOVERS</h1>
        </div>
        
        <!-- Set Year -->
        <div class="col-lg-12" id="set-year-container"> 
            <label for ="filterYear" id="set-year-label">Set Year </label>
            <div id="set-year-input-btn">
                <input type="number" class="form-control form-control-sm searchField" id="set-year-input"  
                placeholder="Year" aria-controls="DataTables_Table_0" name="filterYear" value={{year}} max={{year}}>
                <button type="button" class="btn btn-success" id="set-year-btn">
                    <span class="material-icons-outlined set-year-span">filter_alt</span>
                </button>
            </div>
        </div>                 
        
        <!-- DataTable -->
        <div id="main-div">
            <div class="col-lg-10 h-75 d-inline-block row justify-content-center" id="content-container">
                <div id="table-container" class="datatable-wide">
                    <table class="table table-striped table-bordered drdatatable" style="width: 100%" id="dr-datatable">
                        <thead>
                            <tr> 
                                <th class="filterCol">Date Issued</th>
                                <th class="filterCol">Company</th>
                                <th class="filterCol">Client</th>
                                <th class="filterCol">Driver</th>
                                <th class="filterCol">Truck Plate No.</th>
                                <th>View DR</th>
                                <th class="filterCol">Payment Status</th>
                            </tr>           
                        </thead>
                        
                        <tbody>
                            {{#each dr}}
                                {{>drRowAccounting}}    
                            {{/each}}
                        </tbody>
                        
                        <tfoot>
                            <tr>
                                <th class="filterCol">Date Issued</th>
                                <th class="filterCol">Company</th>
                                <th class="filterCol">Client</th>
                                <th class="filterCol">Driver</th>
                                <th class="filterCol">Plate No.</th>
                                <th>View DR</th>
                                <th class="filterCol">Status</th>
                            </tr>    
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>  

        <!-- 2nd Modal: Confirmation for Updating Payment Status -->
        <div class="modal" id="paymentStatusModal" data-backdrop="static">
            <div class="modal-dialog">
                <div class="modal-content">
                    <div class="modal-header">
                        <h4 class="modal-title" id="secondModalTitle">Payment Status Update</h4>
                    </div>
                <div class="container"></div>
                <div class="modal-body" id="updatePaymentStatusText">Would you like to continue on updating the payment status of this Delivery Receipt?</div>
                <hr>
                <div class="modal-footer" id="modalFooterId"> 
                    <button data-dismiss="modal" class="btn btn-light" id="cancelUpdateModal">Cancel</button>
                    <button data-dismiss="modal" class="btn btn-primary" id="continueUpdateModal">Continue</button>
                </div>
                </div>
            </div>
        </div>

        <!-- JavaScript -->
        <!-- jQuery first, then Popper.js, then Bootstrap JS -->    
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.3/umd/popper.min.js" integrity="sha384-ZMP7rVo3mIykV+2+9J3UJ46jBk0WLaUAdn689aCwoqbBJiSnjAK/l8WvCWPIPm49" crossorigin="anonymous"></script>
        <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.1.3/js/bootstrap.min.js" integrity="sha384-ChfqqxuZUCnJSK3+MXmPNIyE6ZbWh2IMqE241rYiqJxyMiZ6OW/JmZQ5stwEULTy" crossorigin="anonymous"></script>
        <script src="https://cdn.datatables.net/1.10.25/js/jquery.dataTables.min.js"></script>
        <script src="https://cdn.datatables.net/1.10.25/js/dataTables.bootstrap4.min.js"></script>
        <script type="text/javascript"  src="/js/accounting-dr-list.js"></script>

    </body>
</html>